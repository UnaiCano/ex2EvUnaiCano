<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".FragmentInfo_Elorrieta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:gravity="center">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="30sp"
            android:gravity="center"
            android:text="Centro Elorrieta Errekamari" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:textSize="30sp"
            android:gravity="center"
            android:text="Centro Elorrieta Errekamari. Centro de enseñanza de FPs y otros tipo de enseñanzas, localizado en el barrio Elorrieta-San Ignacio de Bilbao" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:src="@drawable/elorrieta"/>
        <Button
            android:id="@+id/botonElorrieta"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="Volver"
            android:textSize="30sp"></Button>
    </LinearLayout>
</LinearLayout>